generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// 1. MODELO DE ROLES
// ============================================
model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique @db.VarChar(50) // admin, vendedor
  description String? @db.Text

  // Relaciones
  userRoles       UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
}

// ============================================
// 2. MODELO DE PERMISOS
// ============================================
model Permission {
  id          Int     @id @default(autoincrement())
  slug        String  @unique @db.VarChar(100) // products.create
  description String? @db.Text

  // Relaciones
  rolePermissions RolePermission[]

  @@map("permissions")
}

// ============================================
// 3. ROLES ↔ PERMISOS (Tabla Intermedia Explicita)
// ============================================
model RolePermission {
  roleId       Int @map("role_id")
  permissionId Int @map("permission_id")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId]) // Clave primaria compuesta
  @@map("role_permissions")
}

// ============================================
// 4. MODELO DE USUARIOS (Con Seguridad)
// ============================================
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique @db.VarChar(100)
  passwordHash String   @map("password_hash") @db.VarChar(255)

  // Estado
  isActive     Boolean? @default(true) @map("is_active")
  isVerified   Boolean? @default(false) @map("is_verified")

  // Protección Fuerza Bruta
  failedLoginAttempts Int?       @default(0) @map("failed_login_attempts")
  lockedUntil         DateTime?  @map("locked_until")

  // MFA / 2FA
  isMfaEnabled       Boolean? @default(false) @map("is_mfa_enabled")
  mfaSecretEncrypted String?  @map("mfa_secret_encrypted") @db.Text

  // Auditoría
  lastLogin DateTime? @map("last_login")
  lastIp    String?   @map("last_ip") @db.VarChar(45)
  createdAt DateTime? @default(now()) @map("created_at")

  // Relaciones
  userRoles          UserRole[]
  securityLogs       SecurityLog[]
  emailVerifications EmailVerification[]
  passwordResets     PasswordReset[]
  products           Product[]

 // REFRESH TOKENS Gestión de Sesiones
  refreshTokens      RefreshToken[]
  passwordHistory    PasswordHistory[]

  // Índices de seguridad
  @@index([email], name: "idx_users_email")
  @@index([lockedUntil], name: "idx_users_locked_until")
  @@map("users")
}

// ============================================
// 5. USUARIOS ↔ ROLES (Tabla Intermedia)
// ============================================
model UserRole {
  userId Int @map("user_id")
  roleId Int @map("role_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_roles")
}

// ============================================
// 6. CONFIRMACIÓN DE EMAIL
// ============================================
model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  tokenHash String   @map("token_hash") @db.VarChar(255)
  expiresAt DateTime @map("expires_at")
  verified  Boolean? @default(false)
  createdAt DateTime? @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash], name: "idx_email_verifications_token")
  @@map("email_verifications")
}

// ============================================
// 7. RESET DE CONTRASEÑA
// ============================================
model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  tokenHash String   @map("token_hash") @db.VarChar(255)
  expiresAt DateTime @map("expires_at")
  used      Boolean? @default(false)
  createdAt DateTime? @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash], name: "idx_password_resets_token")
  @@map("password_resets")
}

// ============================================
// 8. LOGS DE SEGURIDAD
// ============================================
model SecurityLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  action    String   @db.VarChar(100) // LOGIN_SUCCESS, LOGIN_FAILED
  ipAddress String?  @map("ip_address") @db.VarChar(45)
  userAgent String?  @map("user_agent") @db.Text
  createdAt DateTime? @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId], name: "idx_security_logs_user")
  @@map("security_logs")
}

// ============================================
// 9. REFRESH TOKENS (Gestión de Sesiones)
// ============================================
model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  tokenHash String   @unique @map("token_hash") @db.VarChar(255)
  userAgent String?  @map("user_agent")
  ipAddress String?  @map("ip_address")
  isRevoked Boolean  @default(false) @map("is_revoked") 
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ============================================
// 10. HISTORIAL DE CONTRASEÑAS
// ============================================
model PasswordHistory {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  passwordHash String   @map("password_hash") @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_history")
}

// ============================================
// 11. PRODUCTOS
// ============================================
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?  @map("image_url")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt

  userId      Int      @map("user_id")
  user        User     @relation(fields: [userId], references: [id])

  @@map("products")
}